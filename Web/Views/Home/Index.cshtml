@model SearchModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>ProductModel</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductList)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ProductModel</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>

</div>
